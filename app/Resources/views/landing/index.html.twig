{% extends 'base.html.twig' %}

{% block content %}

<div class="container">
  <button type="button" class="btn btn-secondary btn-lg btn-block">Vos raids en tant qu'organisateur {{user_name}}</button>
  <br/>

  <ul class="list-group">
  {% for raid in raids_organisateurs %}
    <li class="list-group-item">{{raid.nom}}</li>
  {% endfor %}
  </ul>
  
  <a href="raids/create">
    <i class="fas fa-3x fa-plus-circle"></i>
  </a>

  <br/>

  <button type="button" class="btn btn-secondary btn-lg btn-block">Vos raids en tant que bénévoles {{user_name}}</button>
  <br/>

  <ul class="list-group">
    {% for raid in raids_benevoles %}
      <li class="list-group-item">{{raid.nom}}</li>
  {% endfor %}
  </ul>

  <button type="button" class="btn btn-primary btn-lg btn-block">Tous les raids</button>
  
  <ulclass="list-group">
  {% for raid in all_raids %}
    <li class="list-group-item">
      {{raid.nom}}
      <a href="./raid/{{raid.id}}/edit">
        <span class="glyphicon glyphicon-plus"></span> Rejoins-nous!
      </a>
    </li>
  {% endfor %}
  </ul>

</div>
{% endblock %}
