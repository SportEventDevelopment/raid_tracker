    {#  <a href= {{ path('create_raid') }}> #}
        <li class="list-group-item">{{raid.nom}}</li>
      {# </a> #}
  {% endfor %}
  </ul><br/>

  <button type="button" class="btn btn-primary btn-lg btn-block">Tous les raids</button>

  <ul class="list-group flexcolumn">
  {% for raid in all_raids %}
    <li class="list-group-item text-left">
      {{raid.nom}}
      <a href= {{ path('rejoindre_raid_comme_benevole', {'id_raid': raid.id, 'id_user': user.id}) }}>
        Rejoins-nous!
        <span class="glyphicon glyphicon-plus"></span>
      </a>
    </li>
  {% endfor %}
  </ul>

</div>
{% endblock %}
