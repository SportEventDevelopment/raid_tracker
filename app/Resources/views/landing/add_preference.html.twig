{% extends 'base.html.twig' %}

{% block content %}
<div class='vertical-center'>
    <div class="container col col-md-4">
        <div class="card default-color-dark ">
            {% if not posteNonExistant %}
                {{ form_start(form, {'attr': {'class': 'center border border-light p-5'}}) }}
                    <p class="h4 mb-2 text-center">Ajouter une préférence de poste</p>

                    <div class="form-row mb-4">
                        <div class="col">
                            {{ form_row(form.idPoste, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-row mb-4">
                        <div class="col">
                            <button class="btn btn-info my-4 btn-block" type="submit">Confirmer</button>
                        </div>
                        <div class="col">
                            <button class="btn my-4 btn-block" type="reset">Réinitialiser</button>
                        </div>
                    </div>
                {{ form_end(form) }}
            {% else %}
                <p class="h4 mb-2 text-center p-4">Aucun poste n'est disponible pour ce raid.</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
