{% extends 'base.html.twig' %}

{% block content %}
<div class='vertical-center'>

    {% if est_organisateur %}
        <div class="container col col-sm-8 col-md-4">
            <div class="card default-color-dark ">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}

                {{ form_start(form, {'attr': {'class': 'center border border-light p-5'}}) }}
                    <p class="h4 mb-2 text-center">Inviter des bénévoles</p>

                    <div class="form-row mb-4">
                        <div class="col">
                            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-row mb-4">
                        <div class="col">
                            <button class="btn btn-info my-4 btn-block" type="submit">Inviter</button>
                        </div>
                        <div class="col">
                            <button class="btn btn-info my-4 btn-block" type="reset">Réinitialiser</button>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    {% else %}
        <div class="alert alert-danger" role="alert">
            Vous n'êtes pas organisateur de ce RAID.<br>
            Merci de vous adresser à un des organisateurs pour accéder à cette page
        </div>
    {% endif %}
</div>
{% endblock %}
