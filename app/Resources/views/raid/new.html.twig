                        <div class="col">
                            {{ form_row(raid.equipe, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-row mb-4">
                        <div class="col">
                            <button class="btn btn-info my-4 btn-block" type="submit">Créer un raid</button>
