                    </div>

                    <div class="form-row mb-4">
                        <div class="col">
                            {{ form_row(edit_form.date, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>


                    <div class="form-row mb-4">
                        <div class="col">
                            {{ form_row(edit_form.edition, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                   {# <div class="form-row mb-4">
                        <div class="col">
