{% extends 'base_login.html.twig' %}

{% block content %}
<div class='vertical-center'>
<div class='container col col-sm-8 col-md-6 col-xl-4'>
<div class="card default-color-dark">
{{ form_start(form, {'attr': {'class': 'center border border-light p-5'}}) }}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">
                {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">
                    {{ message }}
            </div>
    {% endfor %}
    
    <p class="h4 mb-4 text-center">Créer un compte</p>
    <div class="form-row mb-4">
        <div class="col">
            <!-- First name -->
            {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-row mb-4">
        <div class="col">
            <!-- E-mail -->
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-row mb-4">
        <div class="col">
            <!-- Password -->
            {{ form_row(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col">
            <!-- Password -->
            {{ form_row(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <small id="defaultRegisterFormPasswordHelpBlock" class="form-text text-center text-muted mb-4">
        Au moins 8 charactères dont 1 chiffre
    </small>

    <!-- Sign up button -->
    <button class="btn btn-info my-4 btn-block" type="submit">Créer un compte</button>

    <hr>

    <!-- Terms of service -->
    <p class="text-center">En cliquant sur
        <em>Créer un compte</em> vous acceptez les
        <a href="" target="_blank">Conditions d'utilisation</a> et la
        <a href="" target="_blank">Politique de confidentialité</a>.
    </p>
{{ form_end(form) }}
</div>
</div>
</div>
{% endblock %}
